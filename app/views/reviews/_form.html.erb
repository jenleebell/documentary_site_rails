<%= render "layouts/errors", :object => @review %>

<%= form_for [@movie, @review] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :comment %>
  <%= f.text_field :comment %>
  <br>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <br>
  <br>
  <%= f.submit 'Submit', class:'btn btn-success' %>
<% end %>

<%= render "layouts/errors", :object => @movie %>

<%= form_for @movie do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :director %>
  <%= f.text_field :director %>
  <br>
  <%= f.label :synopsis %>
  <%= f.text_field :synopsis %>
  <br>
  <%= f.label :image %>
  <%= f.text_field :image %>
  <br>
  <br>
  <%= f.submit 'Add Movie', class:'btn btn-success' %>
<% end %>
